<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/fondo2"
    android:orientation="vertical"
    tools:context=".MainActivity">


    <LinearLayout
        android:id="@+id/linearLayoutFilaUno"
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:layout_height="0sp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/fondo1"
            android:layout_height="match_parent"
            android:layout_weight="1"
            app:srcCompat="@drawable/fondo_2" />

        <TextView
            android:id="@+id/subtitulo5"
            android:layout_height="match_parent"
            android:layout_weight="8"
            android:gravity="clip_horizontal|center|center_horizontal|center_vertical"
            android:text="Monitoreo de tu salud"
            android:textSize="30sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/fondo2"
            android:layout_height="match_parent"
            android:layout_weight="1"
            app:srcCompat="@drawable/fondo_2" />

    </LinearLayout>


    <LinearLayout
        android:id="@+id/linearLayoutFilaDos"
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:layout_height="0sp"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/descricionListaMedir"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="clip_horizontal|center|center_horizontal|center_vertical"
            android:text="Se visualizan los datos de los sensores del paciente."
            android:textSize="20sp"
            android:textStyle="normal" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayou4dftFilaTres"
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:layout_height="0sp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txtReceive"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Oxímetro (%):"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/oxigeno"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:textSize="24sp"
            />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayodutFilaCinco"
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:layout_height="0sp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textV2iew"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Capnografía (mmHg):"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/CO2"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:textSize="24sp"
            />


    </LinearLayout>


    <LinearLayout
        android:id="@+id/linearLayoutFirlaTres"
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textV3iew"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Temperatura (°C):"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/temperatura"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:textSize="24sp"
            />

    </LinearLayout>



    <LinearLayout
        android:id="@+id/linearLayoutFilaD3os"
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Frecuencia cardíaca (lpm):"
            android:textSize="24sp" />

        <TextView
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:textColor="@color/design_default_color_error"
            android:textSize="24sp"
            android:enabled="false"
            android:id="@+id/fcardiaca"
            />

    </LinearLayout>


    <LinearLayout
        android:id="@+id/linearLayoutFila66T77711res"
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/te1xtView"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Presión arterial (mmHg):"
            android:textSize="24sp" />


        <TextView
            android:id="@+id/parterial"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:textSize="24sp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayoutFila8"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/text8View44"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Frecuencia respiratoria (lpm):"
            android:textSize="24sp" />
        <TextView
            android:id="@+id/frespiratoria"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:textSize="24sp"/>

    </LinearLayout>
    <LinearLayout
        android:id="@+id/linearLayoutdebug"
        android:layout_width= "match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/text8View"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="dato:"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/length"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:textSize="24sp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayoutFilaSeis"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:orientation="horizontal"
        android:paddingTop="50sp">

        <ImageView
            android:id="@+id/fondo3"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            app:srcCompat="@drawable/fondo_2" />

        <Button
            android:id="@+id/botonIniciarSesion"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:background="@color/colorPrimary"
            android:foreground="?attr/selectableItemBackgroundBorderless"
            android:text="Actualizar"
            android:textColor="@color/colorAccent" />

        <ImageView
            android:id="@+id/fondo4"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textStyle="bold"
            app:srcCompat="@drawable/fondo_2" />


    </LinearLayout>

</LinearLayout>
