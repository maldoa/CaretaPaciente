<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/fondo2"
    android:orientation="vertical"
    tools:context=".MainActivity">


    <LinearLayout
        android:id="@+id/linearLayoutFilaUno"
        android:layout_width="match_parent"
        android:layout_height="80sp"
        android:layout_weight="0"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/fondo1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            app:srcCompat="@drawable/fondo_2" />

        <TextView
            android:id="@+id/subtitulo5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="clip_horizontal|center|center_horizontal|center_vertical"
            android:paddingTop="10sp"
            android:text="Monitoreo de tu salud"
            android:textSize="30sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/fondo2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:srcCompat="@drawable/fondo_2" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayoutFilaDos"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_weight="0"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/descricionListaMedir"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="0"
            android:gravity="clip_horizontal|center|center_horizontal|center_vertical"
            android:text="Se visualizan los datos de los sensores del paciente."
            android:textSize="18sp"
            android:textStyle="normal" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayoutFilaTres"
        android:layout_width="match_parent"
        android:layout_height="60sp"
        android:layout_weight="0"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txtReceive"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:text="Oxímetro (%):"
            android:textSize="24sp" />

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="240dp"
            android:layout_height="match_parent"
            android:layout_weight="0">

            <TextView
                android:id="@+id/oxigeno"
                android:layout_width="199dp"
                android:layout_height="36dp"

                android:enabled="false"
                android:textColor="@color/design_default_color_error"
                android:textSize="24sp" />



        </com.google.android.material.textfield.TextInputLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayoutFilaCinco"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/linearLayoutFilaTres"
            android:layout_width="match_parent"
            android:layout_height="60sp"
            android:layout_weight="0"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textV2iew"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:text="Capnografía (mmHg):"
                android:textSize="24sp" />

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="200dp"
                android:layout_height="match_parent"
                android:layout_weight="0">

                <TextView
                    android:id="@+id/CO2"
                    android:layout_width="166dp"
                    android:layout_height="33dp"
                    android:textColor="@color/design_default_color_error"
                    android:textSize="24sp"
                    android:enabled="false" />
            </com.google.android.material.textfield.TextInputLayout>
            <TextView
                android:id="@+id/mmHG"
                android:layout_width="100dp"
                android:layout_height="37dp"
                android:layout_gravity="right"
                android:textSize="24sp"
                android:layout_marginBottom="11dp"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayoutFilaTres"
            android:layout_width="match_parent"
            android:layout_height="60sp"
            android:layout_weight="0"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textV3iew"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:text="Temperatura (°C):"
                android:textSize="24sp" />

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="200dp"
                android:layout_height="match_parent"
                android:layout_weight="0">

                <TextView
                    android:layout_width="166dp"
                    android:layout_height="33dp"
                    android:textColor="@color/design_default_color_error"
                    android:textSize="24sp"
                    android:enabled="false"
                    android:id="@+id/temperatura"
                    />
            </com.google.android.material.textfield.TextInputLayout>
            <TextView
                android:id="@+id/Cents"
                android:layout_width="100dp"
                android:layout_height="37dp"
                android:layout_gravity="right"
                android:textSize="24sp"
                android:layout_marginBottom="11dp"/>
        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayoutFilaDos"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_weight="0"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/linearLayoutFila66T777res"
            android:layout_width="match_parent"
            android:layout_height="60sp"
            android:layout_weight="0"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:text="Frecuencia cardíaca (lpm):"
                android:textSize="24sp" />

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="200dp"
                android:layout_height="match_parent"
                android:layout_weight="0">

                <TextView
                    android:layout_width="166dp"
                    android:layout_height="33dp"
                    android:textColor="@color/design_default_color_error"
                    android:textSize="24sp"
                    android:enabled="false"
                    android:id="@+id/fcardiaca"
                    />
            </com.google.android.material.textfield.TextInputLayout>
            <TextView
                android:id="@+id/lpm"
                android:layout_width="100dp"
                android:layout_height="37dp"
                android:layout_gravity="right"
                android:textSize="24sp"
                android:layout_marginBottom="11dp"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayoutFila66T77711res"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/te1xtView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:text="Presión arterial (mmHg):"
                android:textSize="24sp" />

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="200dp"
                android:layout_height="match_parent"
                android:layout_weight="0">

                <TextView
                    android:layout_width="166dp"
                    android:layout_height="33dp"
                    android:textColor="@color/design_default_color_error"
                    android:textSize="24sp"
                    android:enabled="false"
                    android:id="@+id/parterial"

                     />
            </com.google.android.material.textfield.TextInputLayout>
            <TextView
                android:id="@+id/mmHg2"
                android:layout_width="100dp"
                android:layout_height="37dp"
                android:layout_gravity="right"
                android:textSize="24sp"
                android:layout_marginBottom="11dp"/>
        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayoutFila8"
        android:layout_width="match_parent"
        android:layout_height="60sp"
        android:layout_weight="0"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/text8View"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:text="Frecuencia respiratoria (lpm):"
            android:textSize="24sp" />

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="200dp"
            android:layout_height="match_parent"
            android:layout_weight="0">

            <TextView
                android:layout_width="166dp"
                android:layout_height="33dp"
                android:textColor="@color/design_default_color_error"
                android:textSize="24sp"
                android:enabled="false"
                android:id="@+id/frespiratoria"
                />
        </com.google.android.material.textfield.TextInputLayout>
        <TextView
            android:id="@+id/fresp"
            android:layout_width="100dp"
            android:layout_height="37dp"
            android:layout_gravity="right"
            android:textSize="24sp"
            android:layout_marginBottom="11dp"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/linearLayoutdebug"
        android:layout_width="match_parent"
        android:layout_height="60sp"
        android:layout_weight="0"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/text8View"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:text="dato:"
            android:textSize="24sp" />

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="300dp"
            android:layout_height="match_parent"
            android:layout_weight="0">

            <TextView
                android:layout_width="300dp"
                android:layout_height="33dp"
                android:textColor="@color/design_default_color_error"
                android:textSize="24sp"
                android:enabled="false"
                android:id="@+id/debug"
                />
        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:id="@+id/length"
            android:layout_width="50dp"
            android:layout_height="37dp"
            android:layout_gravity="right"

            android:layout_marginRight="1dp"
            android:layout_marginBottom="1dp"
            android:textSize="24sp" />
    </LinearLayout>


    <LinearLayout
        android:id="@+id/linearLayoutFilaSeis"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:paddingTop="50sp">

        <ImageView
            android:id="@+id/fondo3"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            app:srcCompat="@drawable/fondo_2" />

        <Button
            android:id="@+id/botonIniciarSesion"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:background="@color/colorPrimary"
            android:foreground="?attr/selectableItemBackgroundBorderless"
            android:text="Actualizar"
            android:textColor="@color/colorAccent" />

        <ImageView
            android:id="@+id/fondo4"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textStyle="bold"
            app:srcCompat="@drawable/fondo_2" />


    </LinearLayout>

</LinearLayout>